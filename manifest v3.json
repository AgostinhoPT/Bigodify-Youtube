{
    "manifest_version": 3,
    "name": "YouTube MrBeastify",
    "version": "1.6.0",
    "icons": {
        "96": "icons/icon-96.png"
    },
    "description": "Modify YouTube thumbnails to include MrBeast",
    "browser_action": {
        "default_popup": "settings.html"
    },
    "host_permissions": [
        "storage",
        "*://*.youtube.com/*"
    ],
    "content_scripts": [{
        "matches": ["*://*.youtube.com/*"],
        "js": ["mrbeastify.js"],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": [{
        "resources": [
            "images/*.png",
            "images/*.json"
        ],
        "matches": [
            "*://*/*"
        ]
    }]
}